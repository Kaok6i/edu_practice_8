<Window x:Class="LangSchool.pages.ForActiveAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangSchool.pages"
        mc:Ignorable="d"
         Title="Окно активации" Height="250" Width="400" FontFamily="Comic Sans MS"
 Icon="res/school_logo.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите пароль" FontSize="20" Height="30"
                       HorizontalAlignment="Center" Margin="0 40 0 0"/>

            <TextBox x:Name="tbPasswordAdmin" Width="200" Height="30" HorizontalAlignment="Center"
                     Margin="0 10 0 0" PreviewKeyDown="tbPasswordAdmin_PreviewKeyDown"
                     BorderBrush="#FF04A0FF"/>

            <Button x:Name="Search" Width="200" Height="30" HorizontalAlignment="Center"
         Margin="0 70 0 0" Content="Активировать" BorderBrush="#FF04A0FF" Background="White"
                    Click="Search_Click"/>
        </StackPanel>
    </Grid>
</Window>
